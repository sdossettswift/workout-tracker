= simple_form_for(@workout, html: { class: 'form-horizontal'}) do |f|
  = f.input :date, label: "Date", input_html: {class: "form-control"}
  = f.input :workout, label:"Workout", input_html: {class: "form-control"}
  = f.input :mood, label: "Mood", input_html: {class: "form-control"}
  = f.input :length, label: "Length", input_html: {class: "form-control"}
  = f.input :comments, label: "Comments", input_html: {class: "form-control"}
  = f.button :submit
